package com.sailing{	import fl.transitions.Tween; 	import fl.transitions.easing.*; 	import mx.flash.UIMovieClip;			public class ForgatHandler{	private var forgoTween1:Tween;	 private var diff:Number;	 private var hol:Number = 0;	 private var mutat0 = 0; 	 private var mutat1 = 0; 	 private var voltmar:Boolean = false;	 private var mutato;	 private var controll:UIMovieClip;	 		public function ForgatHandler(mutato, controll:UIMovieClip){			this.mutato = mutato;			this.controll = controll;		}				public function forgat(mutat, needTween=true):void{			   this.mutat0 = mutat;				if(needTween){					 if (this.mutat0 != this.mutat1){					     if (!this.voltmar){						     this.hol = this.mutat0						     this.forgoTween1 = new Tween (this.mutato,"rotation",None.easeNone,this.hol,this.hol,1,true);							 this.mutato.visible = true; 								}					     else{						     this.diff = this.mutat0 - this.mutat1					 						     if (this.diff > 180){							     this.diff =  this.diff - 360						     }else if(this.diff < -180){							     this.diff = 360 + this.diff						     }					 						    this.hol= this.hol+ this.diff					     }										     this.forgoTween1.continueTo(this.hol, 1);										  //   this.mutato.szam.text = diff;										     this.voltmar = true;					     this.mutat1 = this.mutat0;				   	}else{										   	}				 }else{					this.mutato.rotation = mutat;				 }			  		 }	}	}